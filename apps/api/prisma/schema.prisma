// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// declare enum
enum SaleType {
  paid
  free
}

// declare table
model Events {
  id Int @id @default(autoincrement())
  name String
  slug String
  start_date DateTime @db.DateTime
  end_date DateTime @db.DateTime
  available_start_date DateTime? @db.DateTime
  available_end_date DateTime? @db.DateTime
  price Decimal @db.Decimal(10, 0)
  discount_price Decimal? @db.Decimal(10, 0)
  city_id Int?
  location String? @db.VarChar(100)
  description String? @db.Text
  seats Int?
  event_type Int?
  event_category Int?
  created_by Int
  updated_by Int?
  sale_type SaleType?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? @db.DateTime
}

model Event_category {
  id Int @id @default(autoincrement())
  name String
}

model Event_type {
  id Int @id @default(autoincrement())
  name String
}

model Event_reviews_ratings {
  id Int @id @default(autoincrement())
  event_id Int
  user_id Int
  comments String?
  rating Int?
}

model Countries {
  id Int @id @default(autoincrement())
  name String
}

model Regions {
  id Int @id @default(autoincrement())
  country_id Int
  region_name String
}

model Cities {
  id Int @id @default(autoincrement())
  region_id Int
  city_name String
}

model Transactions {
  id Int @id @default(autoincrement())
  code String
  user_id Int
  event_id Int
  qty Int
  tax Decimal @db.Decimal(10, 0)
  point_used Decimal? @db.Decimal(10, 0)
  total_amount Decimal @db.Decimal(10, 0)
  voucher_id Int?
  payment_method Int
  status String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? @db.DateTime
}

model Users {
  id Int @id @default(autoincrement())
  fullname String
  email String @unique
  phone_number String?
  password String
  referral_code String?
  role String @default("user")
  total_point Decimal @db.Decimal(10, 0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? @db.DateTime
  referral_code_user Referral_code_user[]
}

model Referral_code_user {
  id Int @id @default(autoincrement())
  master_user_id Int
  user_id Int 
  users Users @relation(fields: [user_id], references: [id])
}

model Promotions {
  id Int @id @default(autoincrement())
  event_id Int
  name String
  type String
  image String?
  is_banner Boolean
  start_date DateTime @db.DateTime
  end_date DateTime @db.DateTime
  created_by Int
  updated_by Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? @db.DateTime
}

model Vouchers {
  id Int @id @default(autoincrement())
  promotion_id Int?
  user_id Int
  payment_method Int?
  voucher_code String
  qty Int
  type String
  category String
  amount Int
  status Boolean
  start_date DateTime @db.DateTime
  end_date DateTime @db.DateTime
  created_by Int?
  updated_by Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? @db.DateTime
}

model Payment_method {
  id Int @id @default(autoincrement())
  name String
  admin_fee Decimal @db.Decimal(10, 0)
}

model Points {
  id Int @id @default(autoincrement())
  user_id Int
  point Decimal @db.Decimal(10, 0)
  expired_at DateTime @db.DateTime
}

model Tickets {
  id Int @id @default(autoincrement())
  transaction_id Int
  user_id Int
  event_id Int
  code String
  status String
  valid_until DateTime @db.DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? @db.DateTime
}
